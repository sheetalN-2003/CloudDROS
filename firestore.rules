rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /disaster_alerts/{alert} {
      allow read, write: if request.auth != null;
    }
    match /resources/{document} {
      allow read, write: if request.auth != null;
    }
    match /updates/{update} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
